{
  "name": "react-native-nitro-sound",
  "version": "0.2.10",
  "description": "React Native Sound Module ðŸ”¥ by Nitro",
  "homepage": "https://github.com/hyochan/react-native-nitro-sound",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js",
      "react-native": "./src/index.tsx",
      "browser": "./lib/module/index.web.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "nitrogen",
    "nitro.json",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-nitro-sound-example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "husky install && npx tsx scripts/check-nitro-versions.ts && bob build && yarn nitrogen",
    "nitrogen": "npx nitrogen",
    "release": "release-it --only-version",
    "web": "yarn workspace react-native-nitro-sound-example web",
    "build:web": "yarn workspace react-native-nitro-sound-example build:web",
    "android": "yarn workspace react-native-nitro-sound-example android",
    "ios": "yarn workspace react-native-nitro-sound-example ios",
    "start": "yarn workspace react-native-nitro-sound-example start",
    "logcat": "adb logcat -c && adb logcat --pid=$(adb shell pidof sound.example)"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyochan/react-native-nitro-sound.git"
  },
  "author": "hyochan <hyo@hyo.dev> (https://github.com/hyochan)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hyochan/react-native-nitro-sound/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/babel-preset": "^0.81.0",
    "@react-native/eslint-config": "^0.78.0",
    "@release-it/conventional-changelog": "^9.0.2",
    "@types/jest": "^29.5.5",
    "@types/react": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "commitlint": "^19.6.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "expo": "^53.0.19",
    "husky": "^9.1.6",
    "jest": "^29.2.1",
    "nitrogen": "^0.31.1",
    "prettier": "^3.0.3",
    "react": "19.1.0",
    "react-native": "^0.81.0",
    "react-native-builder-bob": "0.38.4",
    "react-native-nitro-modules": "^0.31.10",
    "release-it": "^17.10.0",
    "turbo": "^1.10.7",
    "typescript": "~5.5.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-nitro-modules": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "custom",
        {
          "script": "nitrogen",
          "clean": "nitrogen/"
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "kotlin-swift",
    "type": "nitro-module",
    "version": "0.51.1"
  },
  "dependencies": {
    "@react-native-community/slider": "^5.0.1",
    "react-native-nitro-sound": "^0.2.10"
  }
}
